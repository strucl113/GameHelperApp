<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0F313C"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".EFT_Menu">

    <Button
        android:id="@+id/select_a_category_text"
        android:layout_width="match_parent"
        android:layout_height="10mm"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/mybutton"
        android:textAllCaps="false"
        android:clickable="false"
        android:shadowRadius="25"
        android:text="@string/select_a_category"
        android:textColor="#FFFFFF"
        android:textSize="25dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ScrollView
        android:layout_width="0"
        android:layout_height="0"
        android:layout_marginTop="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/select_a_category_text">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
        <Button
            android:id="@+id/EFTammo"
            android:layout_width="match_parent"
            android:layout_height="20mm"
            android:background="@drawable/armor"
            />


    </LinearLayout>

    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>